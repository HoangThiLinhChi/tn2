@model IEnumerable<PMQLKSCK.Models.Phong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách phòng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th> 
        <label>Mã Phòng</label>
        </th>
        <th>
            <label>Tên Phòng</label>
        </th>
        <th>
            <label>Giá Phòng</label>
        </th>
        <th>
            <label>Loại Phòng</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaPhong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenPhong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GiaPhong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LoaiPhong)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaPhong.Trim() }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaPhong.Trim() }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaPhong.Trim() })
    </td>
</tr>
}

</table>
